@{
    ViewBag.Title = "Управление банковским днем";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_AdminMenuPartial")
    </div>
    <div class="col-md-6">
        <h2>@ViewBag.Title</h2>

        @if ((TempData["EndBankDayFailed"] as bool?) == true)
        {
            <h4 class="text-danger">Банковский день не закончен</h4>
            <h4 class="text-danger">TempData["EndBankDayMessage"]</h4>
        }
        @if ((TempData["EndBankDayFailed"] as bool?) == false)
        {
            <h4 class="text-success">Банковский день закончен</h4>
        }
        

        @using (Html.BeginForm("EndBankDay", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <button class="btn btn-primary">Закончить банковский день</button>
        }
    </div>
</div>
