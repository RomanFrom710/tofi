@model TOFI.TransferObjects.Employee.Commands.AddPaymentCommand

@using (Html.BeginForm("CashierPaymentApprove", "Employee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CreditAccountId)
        @Html.HiddenFor(model => model.EmployeeId)
        @Html.HiddenFor(model => model.PaymentSum.Currency.Name)
        @Html.HiddenFor(model => model.PaymentSum.Currency.Id)

        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.PaymentSum.Value, new { htmlAttributes = new { min = 0, @class = "form-control" } }) 
                @Html.ValidationMessageFor(model => model.CreditAccountId, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Model.PaymentSum.Currency.Name
            </div>
        </div>

        <div class="col-md-offset-10 col-md-2">
            <button type="submit" class="btn btn-success">Подтвердить</button>
        </div>
    </div>
}
